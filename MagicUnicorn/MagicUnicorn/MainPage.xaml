<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MagicUnicorn"
             x:Class="MagicUnicorn.MainPage">

  <StackLayout>
    <Image Source="unicorn.jpg" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"></Image>
    <Button Text="Press me" HeightRequest="100" Clicked="OnButtonClicked" ></Button>
    <Button Text="Do not press me!! I'm serious!!" HeightRequest="100"></Button>
  </StackLayout>
</ContentPage>